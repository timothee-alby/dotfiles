[alias]
	st = status
	stu = status -uno # WARNING: untracked files won't be displayed
	sb = status -sb
	co = checkout
  cob = checkout -b
	ci = commit
  cam =  commit --amend
	df = diff --staged
	ls = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short
	lsv = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(red)%d %C(reset)%s%C(green) [%cn]' --decorate --date=short --numstat
  lg = log --graph --oneline
	cp = cherry-pick
	br = branch
	dw = diff --word-diff
	sl = stash list
	sa = stash apply
	ss = stash save
	ap = add -p
	u= branch -u
	pe = pull --rebase
  ec = config --global -e
  down = pull --rebase --prune
  wip = !git add -u && git commit -m "WIP"
  undo = reset HEAD~1 --mixed
  wipe = !git add -A && git commit -qm 'WIPE ME' && git reset HEAD~1 --hard
  aa = add -A
  ri = rebase -i
  pu = push -u
  pf = push -f
[credential]
	helper = osxkeychain
[push]
	default = current
[color]
	ui = true
[core]
	trustctime = false
